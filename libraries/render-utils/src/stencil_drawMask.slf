INPUT(0, vec2, varTexCoord0);

float aspectRatio = 0.95;

void main(void) {
    vec2 pos = varTexCoord0 * 2.0 - vec2(1.0);
    pos.x =  aspectRatio * (pos.x * mix(-2.0, 2.0, float(pos.x > 0.0)) - 1.0);

    if (1.0 - dot(pos.xy, pos.xy) > 0.0) {
        discard;
    }
}
