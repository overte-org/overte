<@include ssao.slh@>
<$declareAmbientOcclusion()$>

TEXTURE(0, sampler2D, depthMap);

OUTPUT(0, vec4, outFragColor);

void main(void) {
    float Zdb = texelFetch(depthMap, ivec2(gl_FragCoord.xy), 0).x;
    float Zeye = -evalZeyeFromZdb(Zdb);
    outFragColor = vec4(Zeye, 0.0, 0.0, 1.0);
}
