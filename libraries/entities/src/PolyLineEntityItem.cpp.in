void PolyLineEntityItem::setLinePoints(const QVector<glm::vec3>& points) {
    withWriteLock([&] {
        _linePoints = points;
        _pointsChanged = true;
    });
    computeAndUpdateDimensions();
}

void PolyLineEntityItem::setStrokeWidths(const QVector<float>& strokeWidths) {
    withWriteLock([&] {
        _strokeWidths = strokeWidths;
        _widthsChanged = true;
    });
    computeAndUpdateDimensions();
}

